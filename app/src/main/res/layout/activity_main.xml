<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:text="zganij liczbe"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/przyciskWylosuj"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:text="Wylosuj liczbe" />

    <TextView
        android:id="@+id/liczbaTekst"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:text="0"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/przyciskOdejmij"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <TextView
            android:id="@+id/liczbaDana"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="50"
            android:textAlignment="center"
            android:textSize="100dp" />

        <ImageButton
            android:id="@+id/przyciskDodaj"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_media_ff"/>

    </LinearLayout>

    <Button
        android:id="@+id/przyciskZgadnij"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:text="Zgadnij" />


</LinearLayout>